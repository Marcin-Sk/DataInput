<Window x:Class="wizard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wizard"
        mc:Ignorable="d"
        Title="Main Window" Height="450" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Height="50" Width="160" Click="button_Click" >Launch Application</Button>
        <Button Grid.Row="1" Height="50" Width="160" Click="button_Click_1" >Close Application</Button>
    </Grid>
</Window>
